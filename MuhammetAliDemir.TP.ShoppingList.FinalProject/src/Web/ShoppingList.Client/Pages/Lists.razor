@page "/lists"
@inherits ListComponent
@inject UserLoginData _user

<h3>Lists</h3>
@if( List  == null)
{
	@if(!_user.IsLoggedIn)
	{
		<br />
		<p>You have to login first!..</p>
	}
	else
	{
		<br />
		<DisplaySpinner/>		
	}
}
else
{
	<h3 class="mb-5"></h3>

	@if(List != null )
	{
		var listRowList = new BaseResponse<ListResponse>();

		<div>
			<div class="col-md-9">
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Title</th>
							<th scope="col">Description</th>
						</tr>
					</thead>
					<tbody>
						@foreach(var item in List.Data)
						{
							<tr>
								<td>@item.Id</td>             
								<td>@item.Title</td>                  
								<td>@item.Description</td>                    
							</tr>                    
						}
					</tbody>
				</table>
			</div>
		</div>
	}
}
