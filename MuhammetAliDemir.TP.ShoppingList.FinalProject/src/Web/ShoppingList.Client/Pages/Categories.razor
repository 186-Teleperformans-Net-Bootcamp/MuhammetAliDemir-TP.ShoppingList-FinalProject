@page "/categories"
@inherits CategoryComponent
@inject UserLoginData _user

<h3>Categories</h3>
<hr />
@if( Category  == null)
{
	@if(!_user.IsLoggedIn)
	{
		<br />
		<p>You have to login first!..</p>
	}
	else
	{
		<br />
		<DisplaySpinner/>
	}
}
else
{
	<h3 class="mb-5"></h3>

	@if(Category != null )
	{
		var listRowList = new BaseResponse<CategoryResponse>();

		<div>
			<div class="col-md-9">
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Name</th>
							<th scope="col">Description</th>
						</tr>
					</thead>
					<tbody>
						@foreach(var item in Category.Data)
						{
							<tr>
								<td>@item.Id</td>             
								<td>@item.Name</td>                  
								<td>@item.Description</td>                    
							</tr>                    
						}
					</tbody>
				</table>
			</div>
		</div>
	}
}
